<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="expenditure.businessfunction.Itemtype"
		table="item_type">

		<id name="id" column="id">
			<generator class="increment" />
		</id>

		<property name="code" length="20" />
		<property name="discription" length="20"  />
		<property name="financeItemType" type="yes_no" column="IS_FINANCE" access="field" />
		
		<!-- <property name="financeItemType" type="yes_no" column="IS_FINANCE" access="field" /> -->
		<many-to-one name="cashFlowType" class="expenditure.businessfunction.CashFlowType"
					column="cash_flow_type_fk"   />

	</class>

</hibernate-mapping>