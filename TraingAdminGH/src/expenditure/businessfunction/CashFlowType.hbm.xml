<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="expenditure.businessfunction.CashFlowType"
		table="cash_flow_type">

		<id name="id" column="id">
			<generator class="increment" />
		</id>

		<property name="cashFlowType" length="20" column="cash_flow_type"  />
		<property name="active" type="yes_no" column="IS_ACTIVE" access="field" />

	</class> 

</hibernate-mapping>	